<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/quiz_nav"
    app:startDestination="@id/quizFragment">

    <fragment
        android:id="@+id/someFragment"
        android:name="com.viled.feature_quiz.SomeFragment"
        android:label="SomeFragment">

        <action
            android:id="@+id/action_someFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.viled.feature_quiz.QuizFragment"
        android:label="QuizFragment" >

        <argument
            android:name="mode"
            app:argType="com.viled.core.dto.Mode" />
    </fragment>
</navigation>